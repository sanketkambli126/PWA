@section Modal
{
    <partial name="VVR/addInspectionModal" />
    <div class="modal fade p-0 vvrmodal" id="modalfindingslist" role="dialog" aria-labelledby="modalfindingslist" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width:820px;box-shadow: none;">
            <div class="modal-content">
                <div class="modal-header header-background header-padding">
                    <div class="col-md-11 pl-0">
                        <div class="common-sub-heading-black">
                            Add Finding
                        </div>
                    </div>
                    <div>
                        <button type="button" class="close pull-right p-0 mr-0 mt-0 font-size-close" data-dismiss="modal" aria-label="Close">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section Modal{
    <!-- Agent Details Modal -->
    <div class="modal fade" id="agentdetails" tabindex="-1" role="dialog" aria-labelledby="agentdetails"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="agentdetails">Port Call Agent Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <span>ADAFERA</span>&nbsp;|&nbsp;<span><b>IMO 9258478</b></span>
                        </div>
                    </div>
                    <div class="main-card pt-3">
                        <div class="row">
                            <div class="col-md-12 col-lg-6">
                                <div class="card-header text-uppercase bg-secondary text-white height-30px">
                                    <div class="w-100">
                                        <span>AGENT 1</span>
                                    </div>
                                </div>
                                <div class="card-body py-0 pb-3 border mb-3">
                                    <h5 class="card-title pt-3">ISS - ABERTEEN(Charter)</h5>
                                    Unit 5 B;Earls Gate Business Park, Grangemouth,Scotland FK3<br>
                                    8ZE, United Kingdom<br>
                                    Aberden,United Kingdom<br>
                                    Telephone: 01324 466 740<br />
                                    Email: <a href="mailto:GBGRC@ISS-Shipping.com" class="card-link">GBGRC@ISS-Shipping.com</a>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-6">
                                <div class="card-title">Notes</div>
                                <textarea class="form-control form-control-sm" rows="8"></textarea>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Events Docs Modal -->
    <div class="modal fade" id="eventsdoc" tabindex="-1" role="dialog" aria-labelledby="eventsdoc"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document" style="max-width:900px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="agentdetails">Port/Call Documents</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <div class="card-title">PORTCALL DETAILS</div>
                        <div class="row">
                            <div class="col-4 col-md-3 col-lg-2 pr-mobile-0">
                                <label><b>Event Name</b></label>
                            </div>
                            <div class="col-8 col-md-3 col-lg-2">
                                <span>NOR Tendered</span>
                            </div>
                            <div class="col-4 col-md-3 col-lg-2">
                                <label><b>From Date</b></label>
                            </div>
                            <div class="col-8 col-md-3 col-lg-2">
                                <span>23 Apr 2020 02:30</span>
                            </div>
                            <div class="col-4 col-md-3 col-lg-2">
                                <label><b>To Date</b></label>
                            </div>
                            <div class="col-8 col-md-3 col-lg-2">
                                <span>23 Apr 2020 04:42</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-title">ATTACHMENTS (1)</div>
                    <div class="table-responsive compact-table">
                        <table style="width: 100%;" id="dtdocs" class="table table-hover table-bordered cardview row-sm">
                            <thead>
                                <tr>
                                    <th>Docs</th>
                                    <th>Created Date</th>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

}


@model SupplierRatingBreakdownViewModel

<a href="javascript:void(0)" class="closeRating dropdown-menu-header d-block" ><span aria-hidden="true" class="close-logout" style="right: 0px;">×</span></a>
<span class="closeRating"><h1>@Model.OrderName</h1></span>
<div class="row mx-auto" >
    <div class="col-9 col-md-9 col-lg-9 col-xl-9">
        <div class="rowrating">
            <span class="number">5</span><i class="fa fa-fw uncheckedrate" aria-hidden="true"></i>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="0" style="width:0%"></div>
            </div><span class="number"></span>
        </div>

        <div class="rowrating">
            <span class="number">4</span><i class="fa fa-fw uncheckedrate" aria-hidden="true"></i>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="@Model.FourStar" aria-valuemin="0" aria-valuemax="@Model.TotalOrders" style="width:@string.Concat(Model.FourStarPercent,"%")" ></div>
            </div><span class="number">@Model.FourStar</span>
        </div>

        <div class="rowrating">
            <span class="number">3</span><i class="fa fa-fw uncheckedrate" aria-hidden="true"></i>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ThreeStar" aria-valuemin="0" aria-valuemax="@Model.TotalOrders" style="width:@string.Concat(Model.ThreeStarPercent,"%")"></div>
            </div><span class="number">@Model.ThreeStar</span>
        </div>

        <div class="rowrating">
            <span class="number">2</span><i class="fa fa-fw uncheckedrate" aria-hidden="true"></i>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="@Model.TwoStar" aria-valuemin="0" aria-valuemax="@Model.TotalOrders" style="width:@string.Concat(Model.TwoStarPercent,"%")"></div>
            </div><span class="number">@Model.TwoStar</span>
        </div>

        <div class="rowrating mb-0">
            <span class="number">1</span><i class="fa fa-fw uncheckedrate" aria-hidden="true"></i>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="@Model.OneStar" aria-valuemin="0" aria-valuemax="@Model.TotalOrders" style="width:@string.Concat(Model.OneStarPercent,"%")"></div>
            </div><span class="number">@Model.OneStar</span>
        </div>
    </div>

    <div class="col-2 offset-1 col-md-2 offset-md-1 col-lg-2 offset-lg-1 col-xl-2">
        <span class="d-block semibold txt-green">@Model.AverageRating</span><span class="number mr-0">Rating</span><div class="bottomtext">
            <span class="d-block text-black semibold">@Model.TotalOrders</span><span class="number mr-0">Orders</span>
        </div>
    </div>
</div>

@{

    Layout = null;
    ViewBag.Title = "Create Discussion";
}

<head>
    <style type="text/css">
        html,
        body {
            height: 100%;
            margin: 0px;
            padding: 0px;
        }

        .notificationiframe {
            height: 100%;
            width: 100%;
            border: 0;
        }
    </style>
</head>
<body>
    <form id="creatediscussioncontainerform" target="CreateDiscussionContainerFrame" action="@AppSettings.NotificationCreateDiscussionURL" method="POST" class="d-none">
        <input type="hidden" id="createRequest" name="createRequest" value='' />
    </form>
    <iframe src="" name="CreateDiscussionContainerFrame" class="notificationiframe" frameborder="0"></iframe>
    <script>
        function LoadCreateDicussion(createRequest) {
            document.getElementById('createRequest').value = createRequest;
            document.getElementById('creatediscussioncontainerform').submit();
        }

        async function chatCreateDiscussionEvent() {
            await CefSharp.BindObjectAsync("createChannelCloseWindow");
            window.createChannelCloseWindow.closePopup();            
        }
    </script>
</body>

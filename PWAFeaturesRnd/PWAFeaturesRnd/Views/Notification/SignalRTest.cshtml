
@{

    Layout = "~/Views/Shared/base.cshtml";
}
@section Title
{
    SignalRTest
}
@section ContentSection
{
    <div class="app-main__outer">
        <div class="app-main__inner background-padding new-background open-sans-font-dashboard " id="">
